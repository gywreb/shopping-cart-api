{
  "openapi": "3.0.2",
  "servers": [
    {
      "url": "http://localhost:{port}/api/v1",
      "description": "development server",
      "variables": {
        "port": { "default": "4000" }
      }
    },
    {
      "url": "https://gywreb-node.herokuapp.com/api/v1",
      "description": "production server"
    }
  ],
  "info": {
    "version": "1.7.3",
    "title": "Shopping Cart",
    "description": "This is a shopping cart api docs"
  },
  "tags": [
    {
      "name": "Auth",
      "description": "User authentication"
    },
    {
      "name": "User",
      "description": "Operations about user"
    },
    {
      "name": "Role",
      "description": "Operations about role "
    }
  ],
  "paths": {
    "/auth/register": {
      "post": {
        "tags": ["Auth"],
        "summary": "user registeration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "longnh",
                    "email": "gywreb@gmail.com",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "user login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "email": "gywreb@gmail.com",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/auth/updatePassword": {
      "post": {
        "tags": ["Auth"],
        "summary": "user password update",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "example": {
                "email": "gywreb@gmail.com",
                "currentPassword": "12345678",
                "newPassword": "master-be2020"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          }
        }
      }
    },
    "/user/all": {
      "get": {
        "tags": ["User"],
        "summary": "get all user",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/user/{userId}": {
      "get": {
        "tags": ["User"],
        "summary": "get user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "user ObjectId from mongodb",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "delete": {
        "tags": ["User"],
        "summary": "delete user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "user ObjectId from mongodb",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      },
      "patch": {
        "tags": ["User"],
        "summary": "upadate user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "description": "user ObjectId from mongodb",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              },
              "examples": {
                "user": {
                  "value": {
                    "name": "long",
                    "email": "admin@gmail",
                    "password": "12345678"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          }
        }
      }
    },
    "/role": {
      "get": {
        "tags": ["Role"],
        "summary": "get all roles",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          }
        }
      },
      "post": {
        "tags": ["Role"],
        "summary": "create new role",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Role"
              }
            }
          }
        },
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          }
        }
      }
    },
    "/role/{roleId}": {
      "delete": {
        "tags": ["Role"],
        "summary": "delete user by id",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "roleId",
            "in": "query",
            "description": "role ObjectId from mongodb",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/OK"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden"
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "OK": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": true,
                "code": 200,
                "data": {}
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "resource not found",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 404,
                "message": ""
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "bad request",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 400,
                "message": {
                  "errorField": ""
                }
              }
            }
          }
        }
      },
      "Unauthorized": {
        "description": "unauthorized",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 401,
                "message": ""
              }
            }
          }
        }
      },
      "Forbidden": {
        "description": "no permission to access",
        "content": {
          "application/json": {
            "schema": {
              "example": {
                "success": false,
                "code": 403,
                "message": ""
              }
            }
          }
        }
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "required": ["name", "email", "password"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 6,
            "example": "gywreb"
          },
          "email": {
            "type": "string",
            "uniqueItems": true,
            "example": "gywreb@gmail.com"
          },
          "password": {
            "type": "string",
            "format": "password",
            "minLength": 6
          },
          "role": {
            "type": "string",
            "enum": ["admin", "guest", "teacher", "support"],
            "default": "guest"
          },
          "isActive": {
            "type": "boolean",
            "default": true
          }
        }
      },
      "Role": {
        "type": "object",
        "required": ["role_name", "role_desc"],
        "properties": {
          "role_name": {
            "type": "string",
            "enum": ["admin", "guest", "teacher", "supporter"]
          },
          "role_desc": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
